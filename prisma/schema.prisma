// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id        String  @unique @default(uuid())
  name      String
  email     String  @unique
  password  String
  contact   String  @default("")
  companyId String?
  addressId String?
  orderId   String?
  roleId    String?
  wage      Int?
  obs       String?

  codeEmployee Int?
  Company      Companys?   @relation(fields: [companyId], references: [id])
  address      Address?    @relation(fields: [addressId], references: [id])
  role         Role?       @relation(fields: [roleId], references: [id])
  Order        Order[]
  Favorites    Favorites[]
  Message      Message[]

  @@map("accounts")
}

model Message {
  id        String   @id @default(uuid())
  content   String
  userId    String
  companyId String
  createdAt DateTime @default(now())
  user      Account  @relation(fields: [userId], references: [id])
  company   Companys @relation(fields: [companyId], references: [id])
}

model Address {
  id          String    @unique @default(uuid())
  lat         String
  lng         String
  AccountId   String
  street      String
  houseNumber Int
  district    String
  obs         String?
  orderId     Int?
  Account     Account[]

  @@map("addresses")
}

model Companys {
  id           String     @unique @default(uuid())
  companyCode  String     @unique
  codeEmployee Int        @unique
  companyName  String
  access       String
  lat          String
  lng          String
  street       String
  houseNumber  Int
  district     String
  Account      Account[]
  Role         Role[] // Alterado de Roles para Role
  Category     Category[]
  Sizes        Sizes[]
  Message      Message[]

  @@map("companies")
}

model Products {
  id                 String               @unique @default(uuid())
  companyId          String
  name               String
  price              Int
  image              String
  onlyCombo          Boolean              @default(false)
  relationRequest    RelationRequest[]
  Order              Order[]
  Favorites          Favorites[]
  productsByCategory ProductsByCategory[]
  ProductsBySizes    ProductsBySizes[]
  productsByCombo    productsByCombo[]

  @@map("products")
}

model productsByCombo {
  productId String
  comboId   String
  companyId String
  Product   Products @relation(fields: [productId], references: [id], onDelete: Cascade)
  Combo     combo    @relation(fields: [comboId], references: [id], onDelete: Cascade)

  @@id([productId, comboId])
}

model combo {
  id              String            @unique @default(uuid())
  name            String
  companyId       String
  price           Int
  Image           String
  productsByCombo productsByCombo[]
}

model Sizes {
  id              String            @unique @default(uuid())
  name            String
  companyId       String
  company         Companys?         @relation(fields: [companyId], references: [id])
  ProductsBySizes ProductsBySizes[]

  @@map("sizes")
}

model Category {
  id                 String               @unique @default(uuid())
  name               String
  companyId          String
  company            Companys?            @relation(fields: [companyId], references: [id])
  productsByCategory ProductsByCategory[]

  @@map("categories")
}

model Favorites {
  id        String   @unique @default(uuid())
  productId String
  accountId String
  createdAt DateTime @default(now())

  product Products @relation(fields: [productId], references: [id])
  account Account  @relation(fields: [accountId], references: [id])

  @@map("favorites")
}

model ProductsByCategory {
  productId  String
  categoryId String
  Product    Products? @relation(fields: [productId], references: [id], onDelete: Cascade)
  Category   Category? @relation(fields: [categoryId], references: [id])

  @@id([productId, categoryId])
}

model ProductsBySizes {
  productId String
  sizeId    String
  Product   Products? @relation(fields: [productId], references: [id], onDelete: Cascade)
  Size      Sizes?    @relation(fields: [sizeId], references: [id])

  @@id([productId, sizeId])
}

model Order {
  id        String   @unique @default(uuid())
  companyId String
  priority  Boolean
  status    String
  date      DateTime
  obs       String?
  userId    String

  sizeId    String?
  productId String?

  account         Account           @relation(fields: [userId], references: [id])
  Products        Products?         @relation(fields: [productId], references: [id])
  relationRequest RelationRequest[]

  @@map("orders")
}

model Role {
  id        String    @unique @default(uuid())
  companyId String
  role      String
  userId    String
  Account   Account[]
  Companys  Companys? @relation(fields: [companyId], references: [id])

  @@map("roles")
}

model RelationRequest {
  id        String @unique @default(uuid())
  productId String
  quantity  Int
  orderId   String

  order   Order    @relation(fields: [orderId], references: [id])
  product Products @relation(fields: [productId], references: [id])

  @@map("relation_requests")
}

model Stock {
  id        String @unique @default(uuid())
  companyId String
  name      String
  unidade   String
  unitPrice Int
  quantity  Int

  @@map("stocks")
}
