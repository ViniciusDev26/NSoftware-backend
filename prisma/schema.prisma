// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id           String  @default(uuid())
  companyId    Int?
  AddressId    Int?
  name         String
  email        String  @unique
  password     String
  role         String?
  wage         Int?
  obs          String?
  codeEmployee Int?

  @@map("accounts")
}

model Address {
  id        Int @unique @default(autoincrement())
  idAccount Int

  lat         String
  lng         String
  street      String
  houseNumber Int
  district    String
  obs         String?
}

model Companys {
  id           Int    @unique @default(autoincrement())
  companyCode  String
  codeEmployee Int
  companyName  String
  access       String
}

model Products {
  id              Int               @unique @default(autoincrement())
  companyId       Int
  name            String
  value           Int
  image           String
  sizesId         Int
  recipeId        Int?
  RelationRequest RelationRequest[]
}

model Sizes {
  id        Int    @unique @default(autoincrement())
  size      String
  productId Int
}

model Order {
  id        Int      @unique @default(autoincrement())
  companyId Int
  priority  Boolean
  userId    Int
  status    String
  date      DateTime
  obs       String?
  value     Int
  size      String
  lat       String?
  lng       String?

  RelationRequest RelationRequest[]
}

model RelationRequest {
  id        Int @unique @default(autoincrement())
  productId Int
  quantity  Int
  orderId   Int

  order   Order    @relation(fields: [orderId], references: [id])
  product Products @relation(fields: [productId], references: [id])
}

model Stock {
  id        Int    @unique @default(autoincrement())
  companyId Int
  name      String
  unidade   String
  unitPrice Int
  quantity  Int
}
